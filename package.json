{
    "name": "self-growth-node",
    "description": "A background application interface for listening to books and videos",
    "version": "1.0.0",
    "main": "dist/app.js",
    "types": "dist/app.d.ts",
    "author": {
        "name": "jinjinjiang",
        "email": "jjjisbest@sina.com",
        "url": "https://github.com/Jiangjinjin1/"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git@github.com:Jiangjinjin1/self-growth-node.git"
    },
    "_moduleAliases": {
        "@": ".",
        "@utils": "./utils/"
    },
    "bin": {
        "sql-server-db": "./bin/db"
    },
    "engines": {
        "node": ">= 6.0",
        "npm": ">= 3.10.8"
    },
    "scripts": {
        "dev": "ts-node-dev --respawn ./app.ts",
        "init": "npm link && sql-server-db init",
        "resetFolder": "rimraf dist/*",
        "compile": "tsc",
        "build": "npm-run-all resetFolder compile",
        "start:dev": "nodemon ./dist/app.js",
        "start:prod": "pm2 start ecosystem.config.js --name production"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "src/**/*.{ts,js}": [
            "prettier --write",
            "eslint --fix",
            "git add"
        ]
    },
    "devDependencies": {
        "@types/koa": "^2.13.4",
        "@types/koa-bodyparser": "^4.3.6",
        "@types/koa-convert": "^1.2.4",
        "@types/koa-generic-session": "^2.2.1",
        "@types/koa-logger": "^3.1.2",
        "@types/koa-redis": "^4.0.2",
        "@types/koa-router": "^7.4.4",
        "@types/koa-static": "^4.0.2",
        "@types/lodash": "^4.14.179",
        "@types/node": "^17.0.21",
        "@typescript-eslint/eslint-plugin": "^5.14.0",
        "@typescript-eslint/parser": "^5.14.0",
        "eslint": "^8.10.0",
        "eslint-config-prettier": "^8.5.0",
        "husky": "^7.0.4",
        "lint-staged": "^12.3.6",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.5.1",
        "ts-node-dev": "^1.1.8",
        "typescript": "^4.6.2"
    },
    "dependencies": {
        "bluebird": "^3.7.2",
        "ejs": "^3.1.6",
        "koa": "^2.13.4",
        "koa-bodyparser": "^4.3.0",
        "koa-convert": "^2.0.0",
        "koa-generic-session": "^2.3.0",
        "koa-logger": "^3.2.1",
        "koa-redis": "^4.0.1",
        "koa-router": "^10.1.1",
        "koa-static": "^5.0.0",
        "koa-views": "^8.0.0",
        "lodash": "^4.17.21",
        "log4js": "^6.4.2",
        "module-alias": "^2.2.2",
        "mysql2": "^2.3.3",
        "pm2": "^5.2.0",
        "redis": "^4.0.4",
        "sequelize": "^6.17.0",
        "yargs": "^17.3.1"
    }
}
